<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@id/card_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="80dp"
                android:maxHeight="80dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@id/card_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/card_thumbnail"
                android:textColor="#4c4c4c"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="LENOVO BAKAL LUNCURKAN "/>

            <ImageView
                android:id="@+id/card_logo_publisher"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/card_judul"
                android:layout_toRightOf="@id/card_thumbnail"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/card_user_fn"
                android:layout_alignLeft="@id/card_judul"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_alignTop="@id/card_logo_publisher"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                />

            <TextView
                android:id="@+id/card_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_alignTop="@id/card_logo_publisher"
                android:layout_toRightOf="@id/card_logo_publisher"
                android:text="MMC TV"/>

            <TextView
                android:id="@+id/card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="22 August, 2016"
                android:textSize="10dp"
                android:textColor="@color/grey"
                android:layout_alignTop="@id/card_publisher"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>